---
export interface Props {
	title?: string;
	description?: string;
}

const {
	title = "Table of Three | Private Chef Belfast | Private Dining & Catering Services",
	description = "Table of Three offers premium private chef services in Belfast. Experience Michelin-starred cuisine in your home with our private dining and catering services. Book your private chef in Belfast today.",
} = Astro.props;
import "../styles/global.css";
import "@fortawesome/fontawesome-free/css/all.min.css";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://tableofthree.com/" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content="/logo.png" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://tableofthree.com/" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content={description} />
		<meta property="twitter:image" content="/logo.png" />

		<!-- Additional Meta Tags -->
		<meta
			name="keywords"
			content="private chef belfast, private dining belfast, table of three, private chef services belfast, in-home chef belfast, personal chef belfast, private catering belfast, fine dining belfast, michelin chef belfast, wedding catering belfast, corporate catering belfast, Ryan Stringer"
		/>
		<meta name="author" content="Ryan Stringer" />
		<meta name="robots" content="index, follow" />
		<meta name="geo.region" content="GB-NIR" />
		<meta name="geo.placename" content="Belfast" />
		<meta name="geo.position" content="54.5973;-5.9301" />
		<meta name="ICBM" content="54.5973, -5.9301" />
		<link rel="canonical" href="https://tableofthree.com/" />

		<!-- Structured Data -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "FoodEstablishment",
				"@id": "https://tableofthree.com",
				"name": "Table of Three",
				"alternateName": "Table of Three Private Chef Services",
				"description": "Table of Three offers premium private chef services in Belfast. Experience Michelin-starred cuisine in your home with our private dining and catering services.",
				"url": "https://tableofthree.com",
				"logo": "https://tableofthree.com/logo.png",
				"image": "https://tableofthree.com/logo.png",
				"address": {
					"@type": "PostalAddress",
					"addressLocality": "Belfast",
					"addressRegion": "Northern Ireland",
					"addressCountry": "GB"
				},
				"areaServed": {
					"@type": "City",
					"name": "Belfast"
				},
				"founder": {
					"@type": "Person",
					"name": "Ryan Stringer",
					"jobTitle": "Private Chef"
				},
				"servesCuisine": "Fine Dining",
				"priceRange": "$$$",
				"hasOfferCatalog": {
					"@type": "OfferCatalog",
					"name": "Private Chef Services Belfast",
					"itemListElement": [
						{
							"@type": "Offer",
							"itemOffered": {
								"@type": "Service",
								"name": "Private Chef Belfast",
								"description": "In-home private chef service in Belfast"
							}
						},
						{
							"@type": "Offer",
							"itemOffered": {
								"@type": "Service",
								"name": "Private Dining Belfast",
								"description": "Private dining experiences in your home in Belfast"
							}
						},
						{
							"@type": "Offer",
							"itemOffered": {
								"@type": "Service",
								"name": "Wedding Catering Belfast",
								"description": "Bespoke wedding catering services in Belfast"
							}
						},
						{
							"@type": "Offer",
							"itemOffered": {
								"@type": "Service",
								"name": "Corporate Catering Belfast",
								"description": "High-end corporate catering for events in Belfast"
							}
						}
					]
				},
				"sameAs": []
			}
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
